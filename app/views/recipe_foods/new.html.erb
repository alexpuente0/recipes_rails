<%= render 'shared/navigation', post: @post%>

<%= form_with model: @recipe_food, url: recipe_recipe_foods_path, method: :post do |f| %>

  <%= f.label :food %>
  <%= f.select :food_id, current_user.foods.all.map { |food| [food.name, food.id] } %>
  <%= f.label :quantity %>
  <%= f.text_field :quantity %>
  <%= f.submit "Add" %>
<%end%>