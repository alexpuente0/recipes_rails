<%= render 'shared/navigation', post: @post%>

<div class="sm:flex justify-center p-5">
 <h1 class="text-2xl font-normal leading-normal mt-0 mb-2">  
New Item </h1>
</div>

 <div class="sm:flex justify-center p-5 border-2 border-gray-300">
  <%= form_with model: @food do |form|%>
    <div>
      <%= form.label :name%> <br>
      <%= form.text_field :name%>
    </div>

    <div>
      <%= form.label :quantity%> <br>
      <%= form.text_field :quantity%>
    </div>

    <div>
      <%= form.label :measurement_unit%> <br>
      <%= form.select :measurement_unit, ['grams', 'mililiters', 'units', 'slices']%>
    </div>

    <div>
      <%= form.label :price%> <br>
      <%= form.number_field :price, step: :any%>
    </div>

    <%= form.submit "Create Food", class: "bg-red-500 hover:bg-red-400 text-white font-bold py-2 px-4 border-b-4 border-red-700 hover:border-red-500 rounded"%>
  
  <%end%>
</div> 