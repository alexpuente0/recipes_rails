<div>
  <h1>New Food</h1> 
  <%= form_with model: @food do |form|%>
    <div>
      <%= form.label :name%> <br>
      <%= form.text_field :name%>
    </div>

    <div>
      <%= form.label :quantity%> <br>
      <%= form.text_field :quantity%>
    </div>

    <div>
      <%= form.label :measurement_unit%> <br>
      <%= form.select :measurement_unit, ['grams', 'mililiters', 'units', 'slices']%>
    </div>

    <div>
      <%= form.label :price%> <br>
      <%= form.number_field :price, step: :any%>
    </div>

    <%= form.submit%>
  
  <%end%>
</div> 