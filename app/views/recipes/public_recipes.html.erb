<%= render 'shared/navigation', post: @post%>

<h1> All Recipes </h1>
  <% @recipes.each do |recipe| %>
  <br>
  <%= link_to recipe_path(recipe.id) do %>
<%= recipe.name %> <br>
<%= recipe.description %>
  </div>
  <% end %> 
       <% if can? :destroy, recipe %>
       <%= button_to 'Remove', recipe_path(recipe.id), method: :delete %>
      <% end %>
    <% end %> 