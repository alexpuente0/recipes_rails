<%= render 'shared/navigation', post: @post%>

<div class="sm:flex justify-center p-5">
<h1 class="text-2xl font-normal leading-normal mt-0 mb-2">  
New Recipe </h1>
</div>
 
 <div class="sm:flex justify-center p-5 border-2 border-gray-300">
  <%= form_with model: @recipe do |form|%>
    <div>
      <%= form.label :name%> <br>
      <%= form.text_field :name%>
    </div>

    <div>
      <%= form.label :preparation_time%> <br>
      <%= form.text_field :preparation_time%>
    </div>

    <div>
      <%= form.label :cooking_time%> <br>
      <%= form.text_field :cooking_time%>
    </div>

    <div>
      <%= form.label :description%> <br>
      <%= form.text_area :description%>
    </div>

    <%= form.submit "Create Recipe", class: "bg-red-500 hover:bg-red-400 text-white font-bold py-2 px-4 border-b-4 border-red-700 hover:border-red-500 rounded"%>
  
  <%end%>
</div> 