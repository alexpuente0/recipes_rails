<%= render 'shared/navigation', post: @post%>

<div class="sm:flex justify-center p-5">
<h1 class="text-2xl font-normal leading-normal mt-0 mb-2"> 
Shopping List </h1>
</div>

<div class="sm:flex flex-col items-center">
<div class="border-2 border-gray-300 w-auto m-2 p-2 bg-white sm:flex items-center justify-between w-6/12">
<h2>Total elements: <%=@total_elements%> </h2>
<h2>Total cost: $<%=@total_cost%> </h2>
</div>

<table class="w-4/12">
  <tr class="w-1/2 bg-red-500 text-white">
      <th>Food</th>
      <th>Quantity</th>
      <th>Price</th> 
  </tr>
<tbody>
  <% @requirements.each do |item| %>
  <tr class="even:bg-gray-300">
  <td> <%= item[:name]%> </td>
  <td> <%= item[:diff] %> </td>
  <td> $<%= item[:price] %> </td>
  <% end %>
  </tr>
</tbody>
</table>
</div>